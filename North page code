    <div class="fixed bottom-8 right-8 z-30 hidden md:block">
        <button class="bg-accent-orange hover:bg-accent-orange/90 text-white py-3 px-6 rounded-full font-medium shadow-lg hover:shadow-xl transition-all transform hover:scale-105 flex items-center gap-2 glow">
            <i class="fas fa-map-marked-alt"></i>
            <span>Plan My Trip</span>
        </button>
    </div>

    <script>
        // Initialize GSAP and ScrollTrigger
        gsap.registerPlugin(ScrollTrigger);
        
        // DOM Elements
        const preloader = document.getElementById('preloader');
        const navbar = document.getElementById('navbar');
        const mobileMenuBtn = document.getElementById('mobileMenuBtn');
        const mobileMenu = document.getElementById('mobileMenu');
        const modeToggle = document.getElementById('modeToggle');
        const heroCarousel = document.getElementById('heroCarousel');
        const scrollLeft = document.getElementById('scrollLeft');
        const scrollRight = document.getElementById('scrollRight');
        const horizontalScroll = document.querySelector('.horizontal-scroll-section');
        const testimonialsLeft = document.getElementById('testimonialsLeft');
        const testimonialsRight = document.getElementById('testimonialsRight');
        const testimonialCarousel = document.getElementById('testimonialCarousel');
        
        // Preloader Animation
        window.addEventListener('load', () => {
            gsap.to(preloader, {
                opacity: 0,
                duration: 1,
                onComplete: () => {
                    preloader.style.display = 'none';
                }
            });
        });
        
        // Hero Section Animations
        const heroItems = heroCarousel.querySelectorAll('.carousel-item');
        let currentHeroIndex = 0;
        
        function showHeroSlide(index) {
            heroItems.forEach((item, i) => {
                if (i === index) {
                    gsap.to(item, { opacity: 1, duration: 1.5, ease: 'power2.inOut' });
                } else {
                    gsap.to(item, { opacity: 0, duration: 1.5, ease: 'power2.inOut' });
                }
            });
        }
        
        function nextHeroSlide() {
            currentHeroIndex = (currentHeroIndex + 1) % heroItems.length;
            showHeroSlide(currentHeroIndex);
        }
        
        // Initialize Hero Carousel
        showHeroSlide(0);
        setInterval(nextHeroSlide, 5000);
        
        // Navbar Scroll Effect
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('bg-black/80', 'backdrop-blur-md', 'py-3');
                navbar.classList.remove('py-4');
            } else {
                navbar.classList.remove('bg-black/80', 'backdrop-blur-md', 'py-3');
                navbar.classList.add('py-4');
            }
        });
        
        // Mobile Menu Toggle
        mobileMenuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
            
            if (!mobileMenu.classList.contains('hidden')) {
                mobileMenuBtn.innerHTML = '<i class="fas fa-times"></i>';
            } else {
                mobileMenuBtn.innerHTML = '<i class="fas fa-bars"></i>';
            }
        });
        
        // Dark Mode Toggle
        modeToggle.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
        });
        
        // Horizontal Scroll Navigation
        scrollLeft.addEventListener('click', () => {
            horizontalScroll.scrollBy({ left: -350, behavior: 'smooth' });
        });
        
        scrollRight.addEventListener('click', () => {
            horizontalScroll.scrollBy({ left: 350, behavior: 'smooth' });
        });
        
        // Testimonials Carousel
        let testimonialIndex = 0;
        const testimonialItems = testimonialCarousel.querySelectorAll('.carousel-item');
        
        function showTestimonial(index) {
            const newPosition = -100 * index + '%';
            gsap.to(testimonialCarousel, { 
                transform: `translateX(${newPosition})`,
                duration: 0.7,
                ease: 'power2.out'
            });
        }
        
        testimonialsLeft.addEventListener('click', () => {
            testimonialIndex = Math.max(0, testimonialIndex - 1);
            showTestimonial(testimonialIndex);
        });
        
        testimonialsRight.addEventListener('click', () => {
            testimonialIndex = Math.min(testimonialItems.length - 1, testimonialIndex + 1);
            showTestimonial(testimonialIndex);
        });
        
        // GSAP Scroll Animations
        
        // Hero Animations
        gsap.from('.hero-title', {
            opacity: 0,
            y: 50,
            duration: 1,
            delay: 0.5,
            ease: 'power3.out'
        });
        
        gsap.from('.hero-tagline span', {
            opacity: 0,
            y: 30,
            stagger: 0.2,
            duration: 0.8,
            delay: 1,
            ease: 'back.out'
        });
        
        gsap.from('.hero-subtitle', {
            opacity: 0,
            y: 30,
            duration: 0.8,
            delay: 1.6,
            ease: 'power2.out'
        });
        
        // Destination Card Animations
        gsap.from('.destination-card', {
            scrollTrigger: {
                trigger: '#destinations',
                start: 'top 70%'
            },
            opacity: 0,
            y: 50,
            stagger: 0.2,
            duration: 0.8,
            ease: 'back.out(1.2)'
        });
        
        // Tour Cards Animation
        gsap.from('.tour-card', {
            scrollTrigger: {
                trigger: '#tours',
                start: 'top 70%'
            },
            opacity: 0,
            y: 50,
            stagger: 0.3,
            duration: 0.8,
            ease: 'power2.out'
        });
        
        // Experience Card Animations
        gsap.from('.experience-card', {
            scrollTrigger: {
                trigger: '#experiences',
                start: 'top 70%'
            },
            opacity: 0,
            y: 30,
            stagger: 0.2,
            duration: 0.7,
            ease: 'power2.out'
        });
        
        // Festival Card Animations
        gsap.from('.festival-card', {
            scrollTrigger: {
                trigger: '.festival-card',
                start: 'top 80%'
            },
            opacity: 0,
            x: -30,
            stagger: 0.2,
            duration: 0.7,
            ease: 'power2.out'
        });
        
        // Gallery Images Animation
        gsap.from('.gallery-image', {
            scrollTrigger: {
                trigger: '#gallery',
                start: 'top 70%'
            },
            opacity: 0,
            scale: 0.8,
            stagger: 0.1,
            duration: 0.7,
            ease: 'power1.out'
        });
        
        // Info Card Animations
        gsap.from('.info-card', {
            scrollTrigger: {
                trigger: '#why-visit',
                start: 'top 70%'
            },
            opacity: 0,
            y: 40,
            stagger: 0.15,
            duration: 0.8,
            ease: 'back.out(1.2)'
        });
        
        // Parallax Effect for Background Images
        document.querySelectorAll('.parallax-bg').forEach(bg => {
            gsap.to(bg, {
                scrollTrigger: {
                    trigger: bg.parentElement,
                    start: 'top bottom',
                    end: 'bottom top',
                    scrub: true
                },
                y: '20%',
                ease: 'none'
            });
        });
        
        // Timeline Animation
        gsap.from('.timeline-item', {
            scrollTrigger: {
                trigger: '.timeline',
                start: 'top 80%'
            },
            opacity: 0,
            x: -30,
            stagger: 0.3,
            duration: 0.8,
            ease: 'power2.out'
        });
    </script>
</body>
</html>
