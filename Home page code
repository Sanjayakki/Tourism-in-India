    <script>
        // Dark mode detection
        if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.classList.add('dark');
        }
        
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', event => {
            if (event.matches) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        });
        
        // Initialize AOS (Animate on Scroll)
        document.addEventListener('DOMContentLoaded', function() {
            AOS.init({
                duration: 800,
                easing: 'ease-out',
                once: true
            });
            
            // Initialize all components
            initializeHeroSlider();
            initializeHeaderScrollEffect();
            initializeCustomCursor();
            initializeMobileMenu();
            initializeGalleryFilter();
            initializeMap();
            initializeBudgetSlider();
        });
        
        // Hero Slider
        function initializeHeroSlider() {
            const heroSwiper = new Swiper('.hero-swiper', {
                slidesPerView: 1,
                spaceBetween: 0,
                effect: 'fade',
                speed: 1000,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: false,
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true,
                },
                loop: true
            });
        }
        
        // Header scroll effect
        function initializeHeaderScrollEffect() {
            const header = document.getElementById('header');
            
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    header.classList.add('bg-black', 'bg-opacity-80', 'backdrop-blur-sm', 'shadow-md');
                    header.classList.remove('py-4');
                    header.classList.add('py-3');
                } else {
                    header.classList.remove('bg-black', 'bg-opacity-80', 'backdrop-blur-sm', 'shadow-md');
                    header.classList.remove('py-3');
                    header.classList.add('py-4');
                }
            });
        }
        
        // Custom cursor
        function initializeCustomCursor() {
            const cursorDot = document.querySelector('.cursor-dot');
            const cursorOutline = document.querySelector('.cursor-outline');
            
            if (!cursorDot || !cursorOutline) return;
            
            window.addEventListener('mousemove', function(e) {
                if (window.innerWidth < 1024) return; // Only show custom cursor on desktop
                
                const posX = e.clientX;
                const posY = e.clientY;
                
                cursorDot.style.left = `${posX}px`;
                cursorDot.style.top = `${posY}px`;
                
                // Delayed movement for outline
                setTimeout(() => {
                    cursorOutline.style.left = `${posX}px`;
                    cursorOutline.style.top = `${posY}px`;
                }, 80);
            });
            
            // Hover effect on links
            const links = document.querySelectorAll('a, button');
            links.forEach(link => {
                link.addEventListener('mouseenter', () => {
                    cursorDot.style.transform = 'scale(1.5)';
                    cursorOutline.style.transform = 'scale(1.5)';
                    cursorOutline.style.borderColor = 'rgba(255, 153, 51, 0.6)';
                });
                
                link.addEventListener('mouseleave', () => {
                    cursorDot.style.transform = 'scale(1)';
                    cursorOutline.style.transform = 'scale(1)';
                    cursorOutline.style.borderColor = 'rgba(229, 62, 21, 0.5)';
                });
            });
        }
        
        // Mobile menu
        function initializeMobileMenu() {
            const menuToggle = document.getElementById('menu-toggle');
            const closeMenu = document.getElementById('close-menu');
            const mobileMenu = document.querySelector('.mobile-menu');
            const mobileLinks = document.querySelectorAll('.mobile-menu a');
            
            if (!menuToggle || !closeMenu || !mobileMenu) return;
            
            menuToggle.addEventListener('click', () => {
                mobileMenu.classList.add('active');
            });
            
            closeMenu.addEventListener('click', () => {
                mobileMenu.classList.remove('active');
            });
            
            mobileLinks.forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.remove('active');
                });
            });
        }
        
        // Gallery filter
        function initializeGalleryFilter() {
            const filters = document.querySelectorAll('.gallery-filter');
            const items = document.querySelectorAll('.gallery-item');
            
            if (!filters.length || !items.length) return;
            
            filters.forEach(filter => {
                filter.addEventListener('click', function() {
                    // Update active filter style
                    filters.forEach(f => {
                        f.classList.remove('bg-saffron', 'text-white');
                        f.classList.add('bg-white', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-white');
                    });
                    
                    this.classList.remove('bg-white', 'dark:bg-gray-700', 'text-gray-700', 'dark:text-white');
                    this.classList.add('bg-saffron', 'text-white');
                    
                    const category = this.dataset.filter;
                    
                    items.forEach(item => {
                        if (category === 'all' || item.dataset.category === category) {
                            gsap.to(item, { 
                                duration: 0.5, 
                                opacity: 1, 
                                scale: 1, 
                                ease: "power2.out" 
                            });
                        } else {
                            gsap.to(item, { 
                                duration: 0.5, 
                                opacity: 0.3, 
                                scale: 0.95, 
                                ease: "power2.out" 
                            });
                        }
                    });
                });
            });
        }
        
        // Interactive Map
        function initializeMap() {
            const mapContainer = document.getElementById('india-map');
            const popup = document.getElementById('destination-popup');
            const popupTitle = document.getElementById('popup-title');
            const popupContent = document.getElementById('popup-content');
            const closePopup = document.getElementById('close-popup');
            
            if (!mapContainer || !popup || !popupTitle || !popupContent || !closePopup) return;
            
            // Define destinations
            const destinations = [
                { 
                    name: 'Delhi', 
                    x: 40, 
                    y: 30, 
                    description: 'India\'s capital, a blend of ancient monuments and modern architecture including the Red Fort and India Gate.'
                },
                { 
                    name: 'Mumbai', 
                    x: 30, 
                    y: 60, 
                    description: 'The financial capital of India with iconic sites like the Gateway of India and vibrant Bollywood culture.'
                },
                { 
                    name: 'Jaipur', 
                    x: 35, 
                    y: 40, 
                    description: 'The Pink City known for its stunning palaces, forts, and vibrant bazaars showcasing traditional Rajasthani culture.'
                },
                { 
                    name: 'Varanasi', 
                    x: 55, 
                    y: 45, 
                    description: 'One of the world\'s oldest continuously inhabited cities, famous for its spiritual ghats along the Ganges River.'
                },
                { 
                    name: 'Goa', 
                    x: 25, 
                    y: 70, 
                    description: 'A coastal paradise known for pristine beaches, Portuguese architecture, and vibrant nightlife.'
                },
                { 
                    name: 'Agra', 
                    x: 45, 
                    y: 35, 
                    description: 'Home to the iconic Taj Mahal, one of the Seven Wonders of the World and a testament to eternal love.'
                },
                { 
                    name: 'Darjeeling', 
                    x: 70, 
                    y: 25, 
                    description: 'A hill station famous for its tea plantations, stunning Himalayan views, and the historic Darjeeling Himalayan Railway.'
                },
                { 
                    name: 'Kochi', 
                    x: 30, 
                    y: 85, 
                    description: 'A historic port city with Chinese fishing nets, colonial architecture, and gateway to Kerala\'s backwaters.'
                }
            ];
            
            // Add destination markers
            destinations.forEach(destination => {
                const marker = document.createElement('div');
                marker.className = 'map-marker';
                marker.style.left = `${destination.x}%`;
                marker.style.top = `${destination.y}%`;
                marker.dataset.name = destination.name;
                marker.dataset.description = destination.description;
                
                marker.addEventListener('click', function(e) {
                    // Update popup content
                    popupTitle.textContent = this.dataset.name;
                    popupContent.textContent = this.dataset.description;
                    
                    // Position popup
                    const rect = mapContainer.getBoundingClientRect();
                    const markerX = rect.left + (rect.width * destination.x / 100);
                    const markerY = rect.top + (rect.height * destination.y / 100) - window.scrollY;
                    
                    // Adjust position to avoid going off-screen
                    let popupX = markerX + 20;
                    let popupY = markerY - 20;
                    
                    // Make sure popup stays within window boundaries
                    const popupWidth = 288; // 72*4
                    const popupHeight = 180; // Approximate height
                    
                    if (popupX + popupWidth > window.innerWidth) {
                        popupX = markerX - popupWidth - 20;
                    }
                    
                    if (popupY + popupHeight > window.innerHeight + window.scrollY) {
                        popupY = markerY - popupHeight - 20;
                    }
                    
                    popup.style.left = `${popupX}px`;
                    popup.style.top = `${popupY}px`;
                    
                    // Show popup
                    popup.classList.remove('hidden');
                    gsap.to(popup, { 
                        duration: 0.3, 
                        opacity: 1, 
                        scale: 1, 
                        ease: "back.out(1.7)" 
                    });
                    
                    e.stopPropagation(); // Prevent map click from immediately closing it
                });
                
                mapContainer.appendChild(marker);
            });
            
            // Close popup when clicking close button
            closePopup.addEventListener('click', () => {
                gsap.to(popup, { 
                    duration: 0.2, 
                    opacity: 0, 
                    scale: 0.9, 
                    ease: "power2.in",
                    onComplete: () => {
                        popup.classList.add('hidden');
                    }
                });
            });
            
            // Close popup when clicking outside
            document.addEventListener('click', (e) => {
                if (!popup.contains(e.target) && e.target.className !== 'map-marker') {
                    if (!popup.classList.contains('hidden')) {
                        gsap.to(popup, { 
                            duration: 0.2, 
                            opacity: 0, 
                            scale: 0.9, 
                            ease: "power2.in",
                            onComplete: () => {
                                popup.classList.add('hidden');
                            }
                        });
                    }
                }
            });
        }
        
        // Budget Slider
        function initializeBudgetSlider() {
            const slider = document.getElementById('budget-slider');
            const budgetValue = document.getElementById('budget-value');
            
            if (!slider || !budgetValue) return;
            
            function updateBudgetValue() {
                const value = slider.value;
                let price;
                
                if (value < 20) {
                    price = "$500";
                } else if (value < 40) {
                    price = "$1,000";
                } else if (value < 60) {
                    price = "$1,500";
                } else if (value < 80) {
                    price = "$2,500";
                } else {
                    price = "$3,500+";
                }
                
                budgetValue.textContent = price;
            }
            
            slider.addEventListener('input', updateBudgetValue);
            updateBudgetValue(); // Initialize
        }
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const target = document.querySelector(this.getAttribute('href'));
                if (!target) return;
                
                window.scrollTo({
                    top: target.offsetTop,
                    behavior: 'smooth'
                });
            });
        });
    </script>
</body>
</html>
