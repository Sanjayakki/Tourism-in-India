    <script>
        // Check for dark mode preference
        if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.classList.add('dark');
        }
        
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', event => {
            if (event.matches) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        });
        
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize GSAP
            gsap.registerPlugin(ScrollTrigger);
            
            // Remove preloader after content loads
            setTimeout(() => {
                const preloader = document.getElementById('preloader');
                if (preloader) {
                    preloader.style.opacity = '0';
                    setTimeout(() => {
                        preloader.style.display = 'none';
                    }, 500);
                }
            }, 1500);
            
            // Mobile menu toggle
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mobileNav = document.getElementById('mobileNav');
            
            if (mobileMenuBtn && mobileNav) {
                mobileMenuBtn.addEventListener('click', () => {
                    mobileNav.classList.toggle('active');
                });
            }
            
            // Dark mode toggle
            const darkModeToggle = document.getElementById('darkModeToggle');
            
            if (darkModeToggle) {
                darkModeToggle.addEventListener('click', () => {
                    document.documentElement.classList.toggle('dark');
                });
            }
            
            // Hero carousel
            const carouselSlides = document.querySelectorAll('.carousel-slide');
            let currentSlide = 0;
            
            function showSlide(index) {
                carouselSlides.forEach((slide, i) => {
                    slide.style.opacity = i === index ? '1' : '0';
                });
            }
            
            function nextSlide() {
                currentSlide = (currentSlide + 1) % carouselSlides.length;
                showSlide(currentSlide);
            }
            
            // Start carousel
            setInterval(nextSlide, 5000);
            
            // Animate hero title letters
            const heroTitle = document.getElementById('heroTitle');
            if (heroTitle) {
                const text = heroTitle.innerHTML;
                heroTitle.innerHTML = '';
                
                [...text].forEach((letter, index) => {
                    const span = document.createElement('span');
                    span.className = 'animated-letter';
                    span.innerHTML = letter === ' ' ? '&nbsp;' : letter;
                    heroTitle.appendChild(span);
                    
                    gsap.to(span, {
                        opacity: 1,
                        y: 0,
                        duration: 0.5,
                        delay: 0.05 * index + 1,
                        ease: "power2.out"
                    });
                });
            }
            
            // Scene animations with ScrollTrigger
            const sceneElements = document.querySelectorAll('.scene-element');
            
            sceneElements.forEach((element) => {
                gsap.fromTo(element, 
                    { opacity: 0, y: 50 },
                    { 
                        opacity: 1, 
                        y: 0, 
                        duration: 0.8,
                        scrollTrigger: {
                            trigger: element,
                            start: "top 85%",
                            toggleClass: "scene-visible"
                        }
                    }
                );
            });
            
            // Header scroll effect
            const header = document.getElementById('main-header');
            
            function updateHeader() {
                if (window.scrollY > 50) {
                    header.classList.add('bg-black/80', 'backdrop-blur-sm', 'py-2');
                    header.classList.remove('py-4');
                } else {
                    header.classList.remove('bg-black/80', 'backdrop-blur-sm', 'py-2');
                    header.classList.add('py-4');
                }
            }
            
            window.addEventListener('scroll', updateHeader);
            updateHeader(); // Initial call
            
            // Itinerary filters
            const itineraryFilters = document.querySelectorAll('.itinerary-filter');
            const itineraryCards = document.querySelectorAll('.itinerary-card');
            
            itineraryFilters.forEach(filter => {
                filter.addEventListener('click', function() {
                    // Remove active class from all filters
                    itineraryFilters.forEach(f => f.classList.remove('active', 'bg-gradient-to-r', 'from-amber-500', 'to-pink-500', 'text-white'));
                    
                    // Add active class to clicked filter
                    this.classList.add('active', 'bg-gradient-to-r', 'from-amber-500', 'to-pink-500', 'text-white');
                    
                    const filterValue = this.getAttribute('data-filter');
                    
                    // Show/hide itinerary cards based on filter
                    itineraryCards.forEach(card => {
                        if (filterValue === 'all' || card.getAttribute('data-category') === filterValue) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            });
            
            // Story filters
            const storyFilters = document.querySelectorAll('.story-filter');
            const storyCards = document.querySelectorAll('.traveler-story');
            
            storyFilters.forEach(filter => {
                filter.addEventListener('click', function() {
                    // Remove active class from all filters
                    storyFilters.forEach(f => f.classList.remove('active', 'bg-gradient-to-r', 'from-amber-500', 'to-pink-500', 'text-white'));
                    
                    // Add active class to clicked filter
                    this.classList.add('active', 'bg-gradient-to-r', 'from-amber-500', 'to-pink-500', 'text-white');
                    
                    const filterValue = this.getAttribute('data-filter');
                    
                    // Show/hide story cards based on filter
                    storyCards.forEach(card => {
                        if (filterValue === 'all' || card.getAttribute('data-category').includes(filterValue)) {
                            card.style.display = 'block';
                        } else {
                            card.style.display = 'none';
                        }
                    });
                });
            });
            
            // Map interactions
            const mapRegions = document.querySelectorAll('#rajasthan-region, #goa-region, #kutch-region');
            const mapInfo = document.getElementById('region-info');
            
            mapRegions.forEach(region => {
                region.addEventListener('click', function() {
                    const regionId = this.id;
                    let regionName, description, season;
                    
                    if (regionId === 'rajasthan-region') {
                        regionName = 'Rajasthan';
                        description = 'Land of kings with majestic forts, palaces, and vibrant culture.';
                        season = 'Oct-Mar';
                    } else if (regionId === 'goa-region') {
                        regionName = 'Goa';
                        description = 'Coastal paradise with pristine beaches, colonial heritage, and lively atmosphere.';
                        season = 'Nov-Feb';
                    } else if (regionId === 'kutch-region') {
                        regionName = 'Rann of Kutch';
                        description = 'Mesmerizing white salt desert with vibrant cultural festivals and handicrafts.';
                        season = 'Nov-Feb';
                    }
                    
                    // Update region info
                    if (mapInfo) {
                        mapInfo.innerHTML = `
                            <h4 class="font-bold text-lg mb-2">${regionName}</h4>
                            <p class="text-sm text-gray-700 dark:text-gray-300 mb-2">${description}</p>
                            <div class="flex items-center justify-between text-xs">
                                <span class="text-amber-600 dark:text-amber-400">Best season: ${season}</span>
                                <a href="#destinations" class="text-blue-600 dark:text-blue-400 underline">View Details</a>
                            </div>
                        `;
                        mapInfo.classList.remove('hidden');
                    }
                });
            });
            
            // Load More Stories button placeholder
            const loadMoreBtn = document.querySelector('#stories .mt-12 button');
            if (loadMoreBtn) {
                loadMoreBtn.addEventListener('click', function() {
                    this.innerHTML = 'Loading...';
                    setTimeout(() => {
                        this.innerHTML = 'No More Stories Available';
                        this.disabled = true;
                        this.classList.add('opacity-50', 'cursor-not-allowed');
                    }, 1500);
                });
            }
        });
    </script>
</body>
</html>
