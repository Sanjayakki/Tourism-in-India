    <!-- Floating AI Tour Guide chatbot -->
    <div id="chatbot-toggle" class="fixed bottom-8 left-8 z-30 bg-palm-green hover:bg-palm-green/90 text-white w-14 h-14 rounded-full shadow-lg flex items-center justify-center cursor-pointer transform transition-transform hover:scale-110">
