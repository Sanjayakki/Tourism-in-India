        // Populating Destination Grid
        const destinationGrid = document.getElementById('destination-grid');
        
        function createDestinationCards() {
            destinationGrid.innerHTML = '';
            
            destinations.forEach(destination => {
                const card = document.createElement('div');
                card.classList.add('destination-card', 'bg-white', 'dark:bg-gray-800', 'rounded-xl', 'overflow-hidden', 'shadow-lg', 'cursor-pointer');
                card.dataset.id = destination.id;
                card.dataset.type = destination.type;
                card.dataset.duration = destination.duration;
                card.dataset.budget = destination.budget;
                
                card.innerHTML = `
                    <div class="relative h-48 overflow-hidden">
                        <img src="${destination.image}" alt="${destination.name}" class="w-full h-full object-cover">
                        <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/70 to-transparent">
                            <h3 class="text-white font-semibold text-lg">${destination.name}</h3>
                            <p class="text-white/90 text-sm">${destination.tagline}</p>
                        </div>
                    </div>
                    <div class="p-4">
                        <div class="flex justify-between items-center mb-2">
                            <div class="flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                                <span class="text-gray-700 dark:text-gray-300 text-sm ml-1">${destination.rating}</span>
                            </div>
                            <span class="text-india-green font-semibold">₹${destination.price.toLocaleString()}</span>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">${destination.shortDesc}</p>
                        <button class="w-full py-2 bg-india-saffron hover:bg-amber-600 text-white font-medium rounded-lg transition duration-300 shadow view-details">
                            View Details
                        </button>
                    </div>
                `;
                
                destinationGrid.appendChild(card);
            });
            
            // Add event listeners to destination cards
            document.querySelectorAll('.destination-card').forEach(card => {
                card.addEventListener('click', () => {
                    const id = parseInt(card.dataset.id);
                    openDestinationModal(id);
                });
            });
        }
        
        // Populate testimonials
        const testimonialsContainer = document.getElementById('testimonials-container');
        
        function createTestimonials() {
            testimonialsContainer.innerHTML = '';
            
            const testimonialWidth = 'w-full md:w-3/4 lg:w-1/2 flex-shrink-0';
            
            testimonials.forEach(testimonial => {
                const testimonialCard = document.createElement('div');
                testimonialCard.classList.add(testimonialWidth, 'px-4');
                
                testimonialCard.innerHTML = `
                    <div class="bg-white dark:bg-gray-700 rounded-xl p-6 shadow-md">
                        <div class="flex items-center mb-4">
                            <img src="${testimonial.avatar}" alt="${testimonial.name}" class="w-12 h-12 rounded-full mr-4">
                            <div>
                                <h4 class="font-semibold text-gray-900 dark:text-white">${testimonial.name}</h4>
                                <p class="text-gray-600 dark:text-gray-300 text-sm">${testimonial.location} • ${testimonial.trip}</p>
                            </div>
                        </div>
                        <div class="flex mb-3">
                            ${Array(5).fill().map((_, i) => `
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ${i < testimonial.rating ? 'text-yellow-400' : 'text-gray-300 dark:text-gray-600'}" viewBox="0 0 20 20" fill="currentColor">
                                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                </svg>
                            `).join('')}
                        </div>
                        <p class="text-gray-700 dark:text-gray-300">${testimonial.text}</p>
                    </div>
                `;
                
                testimonialsContainer.appendChild(testimonialCard);
            });
        }
        
        // Testimonial Slider
        let testimonialIndex = 0;
        
        function updateTestimonialSlider() {
            const testimonialItems = document.querySelectorAll('#testimonials-container > div');
            if (!testimonialItems.length) return;
            
            testimonialIndex = (testimonialIndex + testimonials.length) % testimonials.length;
            const translateValue = -testimonialIndex * 100;
            testimonialsContainer.style.transform = `translateX(${translateValue}%)`;
        }
        
        document.getElementById('testimonial-prev').addEventListener('click', () => {
            testimonialIndex--;
            updateTestimonialSlider();
        });
        
        document.getElementById('testimonial-next').addEventListener('click', () => {
            testimonialIndex++;
            updateTestimonialSlider();
        });
        
        // Modal functionality
        const destinationModal = document.getElementById('destination-modal');
        const modalOverlay = destinationModal.querySelector('.modal-overlay');
        const modalContainer = destinationModal.querySelector('.modal-container');
        
        function openDestinationModal(id) {
            const destination = destinations.find(dest => dest.id === id);
            if (!destination) return;
            
            // Update modal content
            document.getElementById('modal-title').textContent = destination.name;
            document.getElementById('modal-image').src = destination.image;
            document.getElementById('modal-image').alt = destination.name;
            document.getElementById('modal-description').textContent = destination.shortDesc;
            
            // Update includes list
            const includesList = document.getElementById('modal-includes');
            includesList.innerHTML = '';
            destination.includes.forEach(item => {
                const listItem = document.createElement('li');
                listItem.classList.add('flex', 'items-start');
                listItem.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-india-green mt-0.5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-gray-700 dark:text-gray-300">${item}</span>
                `;
                includesList.appendChild(listItem);
            });
            
            // Update itinerary
            const itineraryDiv = document.getElementById('modal-itinerary');
            itineraryDiv.innerHTML = '';
            destination.itinerary.forEach(day => {
                const dayDiv = document.createElement('div');
                dayDiv.classList.add('border-l-2', 'border-india-saffron', 'pl-4');
                dayDiv.innerHTML = `
                    <h5 class="font-semibold text-gray-900 dark:text-white">Day ${day.day}: ${day.title}</h5>
                    <p class="text-gray-700 dark:text-gray-300 text-sm">${day.desc}</p>
                `;
                itineraryDiv.appendChild(dayDiv);
            });
            
            // Update pricing
            document.getElementById('modal-base-price').textContent = `₹${destination.price.toLocaleString()}`;
            updateTotalPrice();
            
            // Show modal
            destinationModal.classList.remove('hidden');
            setTimeout(() => {
                modalOverlay.classList.add('opacity-75');
                modalContainer.classList.remove('translate-y-full', 'opacity-0');
            }, 50);
        }
        
        function closeDestinationModal() {
            modalOverlay.classList.remove('opacity-75');
            modalContainer.classList.add('translate-y-full', 'opacity-0');
            setTimeout(() => {
                destinationModal.classList.add('hidden');
            }, 500);
        }
        
        document.getElementById('modal-close').addEventListener('click', closeDestinationModal);
        modalOverlay.addEventListener('click', closeDestinationModal);
        
        // Booking modal functionality
        const bookingModal = document.getElementById('booking-modal');
        const bookingModalOverlay = bookingModal.querySelector('.modal-overlay');
        const bookingModalContainer = bookingModal.querySelector('.modal-container');
        
        function openBookingModal() {
            // Get data from destination modal
            const destinationName = document.getElementById('modal-title').textContent;
            const travelDate = document.getElementById('travel-date').value;
            const adults = document.getElementById('adults').value;
            const children = document.getElementById('children').value;
            const totalPrice = document.getElementById('modal-total-price').textContent;
            
            // Update booking modal with this data
            document.getElementById('booking-destination').textContent = destinationName;
            document.getElementById('booking-dates').textContent = `Travel Date: ${travelDate}`;
            document.getElementById('booking-travelers').textContent = `${adults} Adults, ${children} Children`;
            document.getElementById('booking-total').textContent = totalPrice;
            
            // Close destination modal
            closeDestinationModal();
            
            // Show booking modal
            bookingModal.classList.remove('hidden');
            setTimeout(() => {
                bookingModalOverlay.classList.add('opacity-75');
                bookingModalContainer.classList.remove('translate-y-full', 'opacity-0');
            }, 50);
        }
        
        function closeBookingModal() {
            bookingModalOverlay.classList.remove('opacity-75');
            bookingModalContainer.classList.add('translate-y-full', 'opacity-0');
            setTimeout(() => {
                bookingModal.classList.add('hidden');
                // Reset booking success state
                document.getElementById('booking-form-container').classList.remove('hidden');
                document.getElementById('booking-success').classList.add('hidden');
            }, 500);
        }
        
        document.getElementById('booking-modal-close').addEventListener('click', closeBookingModal);
        bookingModalOverlay.addEventListener('click', closeBookingModal);
        
        // Book Now button
        document.getElementById('book-now-btn').addEventListener('click', () => {
            // Validate travel date is selected
            const travelDate = document.getElementById('travel-date').value;
            if (!travelDate) {
                alert('Please select a travel date');
                return;
            }
            
            openBookingModal();
        });
        
        // Payment form submission
        document.getElementById('payment-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Simulate payment processing
            document.getElementById('booking-form-container').classList.add('hidden');
            document.getElementById('booking-success').classList.remove('hidden');
            
            // Generate booking reference
            const bookingRef = 'IND' + Math.floor(1000 + Math.random() * 9000);
            document.getElementById('booking-reference').textContent = bookingRef;
        });
        
        // Close success modal
        document.getElementById('booking-success-close').addEventListener('click', closeBookingModal);
        
        // Update total price based on travelers
        function updateTotalPrice() {
            const basePrice = parseInt(document.getElementById('modal-base-price').textContent.replace(/[^\d]/g, ''));
            const adults = parseInt(document.getElementById('adults').value) || 0;
            const children = parseInt(document.getElementById('children').value) || 0;
            
            // Calculate total price (adults at full price, children at 50% discount)
            const totalPrice = (basePrice * adults) + (basePrice * 0.5 * children);
            
            document.getElementById('modal-total-price').textContent = `₹${totalPrice.toLocaleString()}`;
            document.getElementById('modal-travelers').textContent = `${adults} Adults, ${children} Children`;
        }
        
        // Add event listeners for traveler inputs
        document.getElementById('adults').addEventListener('change', updateTotalPrice);
        document.getElementById('children').addEventListener('change', updateTotalPrice);
        
        // Filter functionality
        function applyFilters() {
            const budgetFilter = document.getElementById('budget-filter').value;
            const durationFilter = document.getElementById('duration-filter').value;
            const typeFilter = document.getElementById('type-filter').value;
            
            document.querySelectorAll('.destination-card').forEach(card => {
                const budgetMatch = budgetFilter === 'all' || card.dataset.budget === budgetFilter;
                const durationMatch = durationFilter === 'all' || card.dataset.duration === durationFilter;
                const typeMatch = typeFilter === 'all' || card.dataset.type === typeFilter;
                
                if (budgetMatch && durationMatch && typeMatch) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });
        }
        
        document.getElementById('budget-filter').addEventListener('change', applyFilters);
        document.getElementById('duration-filter').addEventListener('change', applyFilters);
        document.getElementById('type-filter').addEventListener('change', applyFilters);
        
        document.getElementById('reset-filters').addEventListener('click', () => {
            document.getElementById('budget-filter').value = 'all';
            document.getElementById('duration-filter').value = 'all';
            document.getElementById('type-filter').value = 'all';
            
            document.querySelectorAll('.destination-card').forEach(card => {
                card.classList.remove('hidden');
            });
        });
        
        // Smooth scroll for navigation
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                window.scrollTo({
                    top: targetElement.offsetTop - 100,
                    behavior: 'smooth'
                });
                
                // Close mobile menu if open
                document.getElementById('mobileMenu').classList.add('hidden');
            });
        });
        
        // Instant Booking Button
        document.getElementById('instantBookBtn').addEventListener('click', () => {
            document.getElementById('destinations').scrollIntoView({ behavior: 'smooth' });
        });
        
        // WhatsApp Chat Button
        document.getElementById('whatsappBtn').addEventListener('click', () => {
            alert('Connecting you to our travel expert on WhatsApp...');
            // In a real application, this would open a WhatsApp chat
        });
        
        // Call Expert Button
        document.getElementById('callExpertBtn').addEventListener('click', () => {
            alert('Connecting you to our travel expert...');
            // In a real application, this would initiate a call
        });
        
        // Contact Form Submission
        document.getElementById('contact-form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Thank you for your message! Our team will contact you shortly.');
            this.reset();
        });
        
        // Newsletter Form Submission
        document.getElementById('newsletter-form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Thank you for subscribing to our newsletter!');
            this.reset();
        });
        
        // Initialize page
        window.addEventListener('load', function() {
            createDestinationCards();
            createTestimonials();
            
            // Simulate video background with an auto-changing gradient
            // In a real application, this would be a video element
            const videoContainer = document.querySelector('.video-container');
            let gradientIndex = 0;
            
            const gradients = [
                'linear-gradient(to right bottom, #FF9933, #138808)',
                'linear-gradient(to right bottom, #138808, #000080)',
                'linear-gradient(to left bottom, #FF9933, #000080)',
                'linear-gradient(to right top, #138808, #FF9933)'
            ];
            
            setInterval(() => {
                gradientIndex = (gradientIndex + 1) % gradients.length;
                videoContainer.querySelector('.bg-gradient-to-br').style.background = gradients[gradientIndex];
            }, 5000);
        });
    </script>
</body>
</html>
